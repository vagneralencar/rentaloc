<p class="login-box-msg">Entre com suas credenciais</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-group mb-3">
    <%= f.collection_select :tenant_id, Tenant.unscoped.active, :id, :name, 
        { prompt: "Selecione a empresa" }, 
        { class: "form-control" } %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-building"></span>
      </div>
    </div>
  </div>

  <div class="input-group mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-envelope"></span>
      </div>
    </div>
  </div>

  <div class="input-group mb-3">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Senha" %>
    <div class="input-group-append">
      <div class="input-group-text">
        <span class="fas fa-lock"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <% if devise_mapping.rememberable? %>
      <div class="col-8">
        <div class="icheck-primary">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Lembrar-me" %>
        </div>
      </div>
    <% end %>

    <div class="col-4">
      <%= f.submit "Entrar", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

<p class="mb-1">
  <%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %>
</p> 