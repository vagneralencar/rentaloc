<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Fotos</h5>
    <%= link_to 'Nova Foto', new_equipment_photo_path(@equipment), class: 'btn btn-primary btn-sm' %>
  </div>
  <div class="card-body">
    <% if @equipment_photos.present? %>
      <div class="row">
        <% @equipment_photos.each do |photo| %>
          <div class="col-md-3 mb-3">
            <div class="card">
              <% if photo.photo.attached? %>
                <%= image_tag photo.photo, class: 'card-img-top' %>
              <% end %>
              <div class="card-body">
                <p class="card-text"><%= photo.description %></p>
                <%= link_to 'Excluir', equipment_photo_path(@equipment, photo), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-muted">Nenhuma foto cadastrada</p>
    <% end %>
  </div>
</div> 