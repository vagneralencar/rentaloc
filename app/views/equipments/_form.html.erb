<%= form_with(model: equipment, url: equipment.new_record? ? equipments_path : equipment_path(equipment), local: true) do |f| %>
  <% if equipment.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(equipment.errors.count, "erro") %> impediram este equipamento de ser salvo:</h4>
      <ul>
        <% equipment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card mb-3">
    <div class="card-header"><b>Dados do Equipamento</b></div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-3">
          <%= f.label :code, 'Código', class: 'form-label-sm' %>
          <%= f.text_field :code, class: 'form-control form-control-sm' %>
        </div>
        <div class="col-md-5">
          <%= f.label :name, 'Nome/Descrição', class: 'form-label-sm' %>
          <%= f.text_field :name, class: 'form-control form-control-sm' %>
        </div>
        <div class="col-md-2">
          <%= f.label :group, 'Grupo', class: 'form-label-sm' %>
          <%= f.text_field :group, class: 'form-control form-control-sm' %>
        </div>
        <div class="col-md-2">
          <%= f.label :status, 'Status', class: 'form-label-sm' %>
          <%= f.select :status, Equipment.statuses.keys.map { |k| [k.humanize, k] }, {prompt: 'Selecione'}, class: 'form-control form-control-sm' %>
        </div>
      </div>
      <div class="row mt-2">
        <div class="col-md-3">
          <%= f.label :sale_value, 'Valor Venda', class: 'form-label-sm' %>
          <%= f.number_field :sale_value, class: 'form-control form-control-sm', step: 0.01 %>
        </div>
        <div class="col-md-3">
          <%= f.label :purchase_value, 'Valor Última Compra', class: 'form-label-sm' %>
          <%= f.number_field :purchase_value, class: 'form-control form-control-sm', step: 0.01 %>
        </div>
        <div class="col-md-3">
          <%= f.label :depreciation, 'Depreciação (%)', class: 'form-label-sm' %>
          <%= f.number_field :depreciation, class: 'form-control form-control-sm', step: 0.01 %>
        </div>
        <div class="col-md-3">
          <%= f.label :weight, 'Peso (kg)', class: 'form-label-sm' %>
          <%= f.number_field :weight, class: 'form-control form-control-sm', step: 0.01 %>
        </div>
      </div>
    </div>
    <div class="card-footer text-end">
      <%= f.submit 'Salvar', class: 'btn btn-primary btn-sm' %>
      <%= link_to 'Voltar', equipments_path, class: 'btn btn-secondary btn-sm' %>
    </div>
  </div>
<% end %>
