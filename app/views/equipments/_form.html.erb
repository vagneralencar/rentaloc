<%= form_with(model: equipment, local: true, html: { class: 'form-horizontal' }) do |f| %>

  <div class="card card-primary">
    <div class="card-header">
      <h4 class="card-title">Informações Básicas</h4>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :category_id, 'Categoria', class: 'col-form-label' %>
            <%= f.collection_select :category_id, @categories, :id, :name, { include_blank: 'Selecione uma categoria' }, { class: 'form-control form-control-sm select2' } %>
          </div>
          <div class="form-group">
            <%= f.label :code, 'Código', class: 'col-form-label' %>
            <%= f.text_field :code, class: 'form-control form-control-sm', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :name, 'Nome', class: 'col-form-label' %>
            <%= f.text_field :name, class: 'form-control form-control-sm', required: true %>
          </div>
          <div class="form-group">
            <%= f.label :description, 'Descrição', class: 'col-form-label' %>
            <%= f.text_area :description, class: 'form-control form-control-sm', rows: 3 %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :status, 'Status', class: 'col-form-label' %>
            <%= f.select :status, Equipment.statuses.keys.map { |key| [key.humanize, key] }, {}, { class: 'form-control form-control-sm' } %>
          </div>
          <div class="form-group">
            <%= f.label :control_type, 'Tipo de Controle', class: 'col-form-label' %>
            <%= f.select :control_type, Equipment.control_types.keys.map { |key| [key.humanize, key] }, {}, { class: 'form-control form-control-sm' } %>
          </div>
          <div class="form-group">
            <%= f.label :unit, 'Unidade', class: 'col-form-label' %>
            <%= f.text_field :unit, class: 'form-control form-control-sm' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="mt-4">
    <% if equipment.new_record? %>
      <%= f.submit 'Criar Equipamento', class: 'btn btn-primary' %>
    <% else %>
      <%= f.submit 'Atualizar Equipamento', class: 'btn btn-primary' %>
    <% end %>
    <%= link_to 'Cancelar', equipments_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
