<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Documentos</h5>
    <%= link_to 'Novo Documento', new_equipment_document_path(@equipment), class: 'btn btn-primary btn-sm' %>
  </div>
  <div class="card-body">
    <% if @equipment_documents.present? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Descrição</th>
            <th>Tipo</th>
            <th>Data</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @equipment_documents.each do |document| %>
            <tr>
              <td><%= document.description %></td>
              <td><%= document.document_type %></td>
              <td><%= l(document.created_at, format: :short) %></td>
              <td>
                <% if document.file.attached? %>
                  <%= link_to 'Download', rails_blob_path(document.file, disposition: 'attachment'), class: 'btn btn-info btn-sm' %>
                <% end %>
                <%= link_to 'Excluir', equipment_document_path(@equipment, document), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm ml-2' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">Nenhum documento cadastrado</p>
    <% end %>
  </div>
</div> 