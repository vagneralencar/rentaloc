<div class="card mb-4">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span><i class="bi bi-building"></i> <b>Obras do Cliente</b></span>
  </div>
  <div class="card-body p-0">
    <table class="table table-sm mb-0">
      <thead>
        <tr>
          <th>Código</th>
          <th>Nome</th>
          <th>Status</th>
          <th>Tipo</th>
          <th>Contato</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @person.works.each do |work| %>
          <tr class="clickable-row" data-href="<%= work_path(work) %>">
            <td><%= work.code %></td>
            <td><%= work.name %></td>
            <td><span class="badge bg-<%= work_status_color(work.status) %>"><%= work.status.humanize %></span></td>
            <td><%= work.work_type.humanize %></td>
            <td><%= work.contacts.first&.name %></td>
            <td>
              <%= link_to edit_work_path(work), class: 'btn btn-sm btn-outline-primary' do %>
                <i class="bi bi-pencil"></i>
              <% end %>
              <%= link_to work_path(work), class: 'btn btn-sm btn-outline-danger', data: { turbo_method: :delete, turbo_confirm: 'Tem certeza?' } do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mt-2">
      <%= link_to 'Nova Obra', new_work_path(person_id: @person.id), class: 'btn btn-info btn-sm' %>
    </div>
  </div>
</div>

<% content_for :styles do %>
  <style>
    .clickable-row {
      cursor: pointer;
    }
    .clickable-row:hover {
      background-color: #f8f9fa;
    }
  </style>
<% end %>

<% content_for :scripts do %>
  <script>
    document.addEventListener('turbo:load', function() {
      document.querySelectorAll('.clickable-row').forEach(function(row) {
        row.addEventListener('click', function(e) {
          // Don't trigger if clicking on action buttons
          if (e.target.closest('.btn')) return;
          
          window.location.href = this.dataset.href;
        });
      });
    });
  </script>
<% end %>