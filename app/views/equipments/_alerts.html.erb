<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Alertas</h5>
    <%= link_to 'Novo Alerta', new_equipment_alert_path(@equipment), class: 'btn btn-primary btn-sm' %>
  </div>
  <div class="card-body">
    <% if @equipment_maintenance_alerts.present? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Data</th>
            <th>Tipo</th>
            <th>Descrição</th>
            <th>Status</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @equipment_maintenance_alerts.each do |alert| %>
            <tr>
              <td><%= l(alert.due_date, format: :short) if alert.due_date %></td>
              <td><%= alert.alert_type %></td>
              <td><%= alert.description %></td>
              <td><%= alert.status %></td>
              <td>
                <%= link_to 'Editar', edit_equipment_alert_path(@equipment, alert), class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Excluir', equipment_alert_path(@equipment, alert), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm ml-2' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">Nenhum alerta cadastrado</p>
    <% end %>
  </div>
</div> 