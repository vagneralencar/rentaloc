<%= turbo_frame_tag "new_commercial_reference" do %>
  <%= form_with(model: [person, commercial_reference || CommercialReference.new], local: true, class: "row g-3") do |f| %>
    <div class="col-md-3">
      <%= f.label :company_name, "Empresa", class: "form-label" %>
      <%= f.text_field :company_name, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :phone, "Telefone", class: "form-label" %>
      <%= f.text_field :phone, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :attendant, "Atendente", class: "form-label" %>
      <%= f.text_field :attendant, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :first_purchase, "Primeira Compra", class: "form-label" %>
      <%= f.date_field :first_purchase, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :largest_purchase, "Maior Compra", class: "form-label" %>
      <%= f.number_field :largest_purchase, class: "form-control", step: "0.01" %>
    </div>

    <div class="col-md-3">
      <%= f.label :last_purchase, "Última Compra", class: "form-label" %>
      <%= f.date_field :last_purchase, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :payment_method, "Forma Pagamento", class: "form-label" %>
      <%= f.text_field :payment_method, class: "form-control" %>
    </div>

    <div class="col-md-3">
      <%= f.label :observation, "Observação", class: "form-label" %>
      <%= f.text_field :observation, class: "form-control" %>
    </div>

    <div class="col-12">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
      <%= link_to "Cancelar", edit_person_path(person, aba: 'referencias'), class: "btn btn-secondary" %>
    </div>
  <% end %>
<% end %> 