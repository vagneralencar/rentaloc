      <i class="bi bi-telephone"></i> Contatos
    <% end %>
  </li>
  <li class="nav-item" role="presentation">
    <%= link_to edit_person_path(@person, aba: 'credito'), class: "nav-link #{'active' if params[:aba] == 'credito'}", role: "tab" do %>
      <i class="bi bi-credit-card"></i> Crédito
    <% end %>
  </li>
  <li class="nav-item" role="presentation">
