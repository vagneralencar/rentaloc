<div class="card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="card-title mb-0">Acessórios</h5>
    <%= link_to 'Novo Acessório', new_equipment_accessory_path(@equipment), class: 'btn btn-primary btn-sm' %>
  </div>
  <div class="card-body">
    <% if @equipment_accessories.present? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Quantidade</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @equipment_accessories.each do |accessory| %>
            <tr>
              <td><%= accessory.accessory&.name %></td>
              <td><%= accessory.accessory&.description %></td>
              <td><%= accessory.quantity %></td>
              <td>
                <%= link_to 'Editar', edit_equipment_accessory_path(@equipment, accessory), class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Excluir', equipment_accessory_path(@equipment, accessory), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm ml-2' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-muted">Nenhum acessório cadastrado</p>
    <% end %>
  </div>
</div> 